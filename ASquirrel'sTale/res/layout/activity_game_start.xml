<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="0dp"
    android:weightSum="1.0"
    tools:context=".GameStartActivity" >

    <ImageView
        android:id="@+id/menuScreenBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/menubackground"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/MenuLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/menuScreenBackground"
        android:layout_centerHorizontal="true"
        android:gravity="bottom|center_horizontal|center_vertical"
        android:orientation="vertical"
        android:weightSum="1.0" >

        <ImageButton
            android:id="@+id/newGame_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:onClick="intentLevelOne"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/new_game"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/cont_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:onClick="intentContinue"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/continue_1"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/options_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:onClick="intentOptions"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/options_final"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/highScores_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight=".10"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:onClick="intentHighScores"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/high_scores"
            tools:ignore="InefficientWeight,ContentDescription" />
    </LinearLayout>

</RelativeLayout>